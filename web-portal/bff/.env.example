# BFF Environment Variables
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgres://telemetry_user:telemetry_password@localhost:5432/telemetry?sslmode=disable

# External Services
MCP_SERVER_URL=http://localhost:8082
TELEMETRY_API_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OAuth2 Configuration (example with Auth0)
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_CALLBACK_URL=http://localhost:3001/auth/callback
OAUTH2_AUTHORIZATION_URL=https://your-domain.auth0.com/authorize
OAUTH2_TOKEN_URL=https://your-domain.auth0.com/oauth/token
OAUTH2_USER_INFO_URL=https://your-domain.auth0.com/userinfo

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000
