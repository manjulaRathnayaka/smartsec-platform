<?xml version="1.0" encoding="UTF-8"?>
<!-- Global Context Configuration for single web application -->
<Context antiResourceLocking="false" privileged="true">
    <!-- Cookie security with SameSite=strict -->
    <CookieProcessor className="org.apache.tomcat.util.http.Rfc6265CookieProcessor"
                     sameSiteCookies="strict" />

    <!-- Session security filter -->
    <Manager sessionAttributeValueClassNameFilter="java\.lang\.(?:Boolean|Integer|Long|Number|String)|java\.util\.(?:Linked)?HashMap"/>
</Context>
